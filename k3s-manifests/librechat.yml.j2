apiVersion: v1
kind: ConfigMap
metadata:
  name: librechat-config
  namespace: ai
data:
  librechat.yaml: |
    version: 1.3.1
    cache: true
    endpoints:
      custom:
        - name: "Ollama"
          apiKey: "ollama"
          baseURL: "http://ollama:11434/v1/" 
          models:
            default: [
              "llama3.1:8b",
              "qwen2.5:7b"
              ]
            fetch: false
          titleConvo: true
          titleModel: "current_model"
          summarize: false
          summaryModel: "current_model"
          forcePrompt: false
          modelDisplayLabel: "Ollama"
    mcpServers:
      weather-mcp:
        type: streamable-http
        url: http://weather-mcp.ai.svc.cluster.local:8000/mcp
      chart-mcp:
        type: streamable-http
        url: http://chart-mcp.ai.svc.cluster.local:1122/mcp
---
apiVersion: v1
kind: Secret
metadata:
  name: librechat-secrets
  namespace: ai
type: Opaque
stringData:
  JWT_SECRET: {{ librechat_jwt_secret | quote }}
  JWT_REFRESH_SECRET: {{ librechat_jwt_refresh_secret | quote }}
  CREDS_KEY: {{ librechat_creds_key | quote }}
  CREDS_IV: {{ librechat_creds_iv | quote }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: librechat-data
  namespace: ai
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: librechat
  namespace: ai
spec:
  replicas: 1
  selector:
    matchLabels:
      app: librechat
  template:
    metadata:
      labels:
        app: librechat
    spec:
      containers:
        - name: librechat
          image: ghcr.io/danny-avila/librechat:v0.8.0
          ports:
            - containerPort: 3080
          env:
            - name: HOST
              value: "0.0.0.0"
            - name: PORT
              value: "3080"
            - name: MONGO_URI
              value: "mongodb://librechat-mongo:27017/LibreChat"
            - name: DOMAIN_CLIENT
              value: "https://chat.server.robertgogete.eu"
            - name: DOMAIN_SERVER
              value: "https://chat.server.robertgogete.eu"
            - name: JWT_SECRET
              valueFrom:
                secretKeyRef:
                  name: librechat-secrets
                  key: JWT_SECRET
            - name: JWT_REFRESH_SECRET
              valueFrom:
                secretKeyRef:
                  name: librechat-secrets
                  key: JWT_REFRESH_SECRET
            - name: CREDS_KEY
              valueFrom:
                secretKeyRef:
                  name: librechat-secrets
                  key: CREDS_KEY
            - name: CREDS_IV
              valueFrom:
                secretKeyRef:
                  name: librechat-secrets
                  key: CREDS_IV
            - name: ALLOW_SOCIAL_LOGIN
              value: "false"
            - name: ALLOW_REGISTRATION
              value: "true"
          volumeMounts:
            - name: librechat-data
              mountPath: /app/client/public/images
            - name: librechat-config
              mountPath: /app/librechat.yaml
              subPath: librechat.yaml
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: 1000m
              memory: 1Gi
      volumes:
        - name: librechat-data
          persistentVolumeClaim:
            claimName: librechat-data
        - name: librechat-config
          configMap:
            name: librechat-config
---
apiVersion: v1
kind: Service
metadata:
  name: librechat
  namespace: ai
spec:
  type: ClusterIP
  selector:
    app: librechat
  ports:
    - protocol: TCP
      port: 3080
      targetPort: 3080
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: librechat
  namespace: ai
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.tls: "true"
spec:
  ingressClassName: traefik
  tls:
    - hosts:
        - chat.server.robertgogete.eu
      secretName: librechat-tls
  rules:
    - host: chat.server.robertgogete.eu
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: librechat
                port:
                  number: 3080
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: librechat-mongo
  namespace: ai
spec:
  replicas: 1
  selector:
    matchLabels:
      app: librechat-mongo
  template:
    metadata:
      labels:
        app: librechat-mongo
    spec:
      containers:
        - name: mongo
          image: mongo:7
          ports:
            - containerPort: 27017
          volumeMounts:
            - name: mongo-data
              mountPath: /data/db
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi
      volumes:
        - name: mongo-data
          emptyDir: {}
---
apiVersion: v1
kind: Service
metadata:
  name: librechat-mongo
  namespace: ai
spec:
  type: ClusterIP
  selector:
    app: librechat-mongo
  ports:
    - protocol: TCP
      port: 27017
      targetPort: 27017
