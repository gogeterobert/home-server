apiVersion: v1
kind: Secret
metadata:
  name: mcp-weather-secret
  namespace: ai
type: Opaque
stringData:
  OWM_API_KEY: "{{ openweather_api_key }}"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: weather-mcp
  namespace: ai
spec:
  replicas: 1
  selector:
    matchLabels:
      app: weather-mcp
  template:
    metadata:
      labels:
        app: weather-mcp
    spec:
      containers:
        - name: weather-mcp
          image: mcp/openweather:latest
          ports:
            - containerPort: 8080
          env:
            - name: OWM_API_KEY
              valueFrom:
                secretKeyRef:
                  name: mcp-weather-secret
                  key: OWM_API_KEY
          resources:
            requests:
              cpu: 50m
              memory: 128Mi
            limits:
              cpu: 200m
              memory: 512Mi
---
apiVersion: v1
kind: Service
metadata:
  name: weather-mcp
  namespace: ai
spec:
  type: ClusterIP
  selector:
    app: weather-mcp
  ports:
    - protocol: TCP
      port: 8080
      targetPort: 8080
